extends base.pug 
block title 
    title contact us 
block style 
    style 
        include ../static/style.css 
        include ../static/contact.css 
block content
    div.container 
        h2 Contact us 
        form(action="/contact", method="post",class="form")
            |Name :
            input(type="text" class="name" name="name" placeholder="Enter your name") 
            |Phone No. :
            input(type="number" class="pno" name="pno" placeholder="Enter your phone number") 
            |Email Id : 
            input(type="email" class="name" name="email" placeholder="Enter your email id") 
            |Address : 
            input(type="text" class="name" name="address" placeholder="Enter your address") 
            |Discription :
            textarea(name="desc", cols="30", rows="10" placeholder="Share your concerns")  
            button(type="submit" name="submit" class="submit" onclick="alert('Successfully submitted...')") submit